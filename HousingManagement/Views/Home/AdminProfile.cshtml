@model HousingManagement.Models.Admins

@{
    ViewData["Title"] = "My Profile";
}

<!-- Header -->
@Html.Partial("~/Views/Shared/_header_admin.cshtml")

<script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
<script src="~/lib/jquery-validation/dist/jquery.validate.js"></script>
<script src="~/lib/jquery/dist/jquery.min.js"></script>
<script src="~/lib/jquery/dist/jquery.js"></script>
<link href="~/lib/bootstrap/dist/css/bootstrap.css" rel="stylesheet" />
<link href="~/lib/bootstrap/dist/css/bootstrap.min.css" rel="stylesheet" />

<div class="container" style="padding-top:170px">
    <!-- Id -->
    <div class="row">
        <center>
            <h3 style="color:midnightblue"><b>Your Admin Id is <i>"@Model.Id"</i></b> </h3>
        </center>
    </div>
    <hr />
    <!-- Image -->
    <div class="row">
        <div class="container col-sm-6" style="padding-left:120px; padding-top:40px">
            <img src="~/images/@Model.Image" style="height:200px; width:200px; border-radius:50%" />
        </div>
        <br><br>
            <div class="col-sm-6">
                <!-- Admin Info -->
                <table>
                    <tr>
                        <th class="col-sm-4">
                            <label><b>First Name:</b></label>
                            <br>
                        </th>
                        <th class="col-sm-8">
                            <div>
                                <p>
                                    @{if (Model.FirstName != null)
                                        {
                                            @Model.FirstName
                                        }
                                    }
                                </p>
                            </div>
                        </th>
                    </tr>

                    <tr>
                        <th class="col-sm-4">
                            <label><b>Last Name:</b></label>
                            <br>
                        </th>
                        <th class="col-sm-8">
                            <div>
                                <p>
                                    @{if (Model.LastName != null)
                                        {
                                            @Model.LastName
                                        }
                                    }
                                </p>
                            </div>
                        </th>
                    </tr>

                    <tr>
                        <th class="col-sm-4">
                            <label><b>Contact No:</b></label>
                            <br>
                        </th>
                        <th class="col-sm-8">
                            <div>
                                <p>
                                    @{if (Model.Contact != null)
                                        {
                                            @Model.Contact
                                        }
                                    }
                                </p>
                            </div>
                        </th>
                    </tr>

                    <tr>
                        <th class="col-sm-4">
                            <label><b>Email:</b></label>
                            <br>
                        </th>
                        <th class="col-sm-8">
                            <div>
                                <p>
                                    @{if (Model.Email != null)
                                        {
                                            @Model.Email
                                        }
                                    }
                                </p>
                            </div>
                        </th>
                    </tr>

                    <tr>
                        <th class="col-sm-4">
                            <label><b>Address:</b></label>
                            <br>
                        </th>
                        <th class="col-sm-8">
                            <div>
                                <p>
                                    @{if (Model.Address != null)
                                        {
                                            @Model.Address
                                        }
                                    }
                                </p>
                            </div>
                        </th>
                    </tr>

                    <tr>
                        <th class="col-sm-4">
                            <label><b>Username:</b></label>
                            <br>
                        </th>
                        <th class="col-sm-8">
                            <div>
                                <p>
                                    @{if (Model.Username != null)
                                        {
                                            @Model.Username
                                        }
                                    }
                                </p>
                            </div>
                        </th>
                    </tr>

                    <tr>
                        <th class="col-sm-4">
                            <label><b>Password:</b></label>
                            <br>
                        </th>
                        <th class="col-sm-8">
                            <div>
                                <p>
                                    @{if (Model.Password != null)
                                        {
                                            @Model.Password
                                        }
                                    }
                                </p>
                            </div>
                        </th>
                    </tr>

                    <tr>
                        <th class="col-sm-4">
                            <br><br><br><br>
                            <button type="button" class="btn btn-danger btn-sm openDiag" data-toggle="modal" data-target="#Delete" data-id="@Model.Id"><span class="glyphicon glyphicon-trash" style="vertical-align:middle;margin-top: -5px"></span> Delete</button>
                            <br>
                        </th>
                    </tr>
                </table>
            </div>
    </div>

    <!-- Delete Modal -->
    <div class="modal fade" id="Delete" role="dialog">
        <div class="modal-dialog">

            <div class="modal-content">
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal">&times;</button>
                    <h4 class="modal-title">Delete</h4>
                </div>
                <div class="modal-body">
                    <p><h3>Are you sure you want to delete this?</h3></p>

                </div>
                <div class="modal-footer">
                    <form asp-controller="Home" asp-action="DeleteAdminProfile" method="post" class="form-inline" role="form">
                        <input type="hidden" name="Id" id="Id">
                        <button type="submit" class="btn btn-danger">Delete</button>
                        <button class="btn" data-dismiss="modal">No</button>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Delete -->
<script type="text/javascript">
    $(document).on("click", ".openDiag", function () {
        var empid = $(this).data("id");
        $(".modal-footer #Id").val(empid);
    });
    $(document).on("click", ".open-dialog", function () {
        var empid = $(this).data("id");
        $(".modal-footer #Id").val(empid);
    });
</script>

<script src="~/js/jquery1.js"></script>